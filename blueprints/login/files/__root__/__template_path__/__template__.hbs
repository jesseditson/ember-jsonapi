<div class="login">
  <h2>log in</h2>
  {{#if error}}
  <span class="error">{{error}}</span>
  {{/if}}
  <form {{action "login" on="submit"}}>
    <div class="form-group">
      <label>
        email
        {{input type="email" required=true name="email" value=email}}
      </label>
    </div>
    <div class="form-group">
      <label>
        password
        {{input type="password" required=true name="password" value=password}}
      </label>
    </div>
    <div class="form-group button-group">
      {{input type="submit" value="log in" class="button"}}
    </div>
  </form>
</div>

{{outlet}}
